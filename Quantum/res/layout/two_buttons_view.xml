<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/buttons_row"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/ghostwhite">

    <Button android:id="@+id/quick_spend_button"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="@string/quick_spend"
            android:textColor="@color/dark_gray"
            android:background="@drawable/item_background_orange"
        />

    <View
        android:layout_height="match_parent"
        android:layout_marginTop="8dip"
        android:layout_marginBottom="8dip"
        android:layout_width="1dip"
        android:background="@color/mid_gray" />

    <Button android:id="@+id/spend_money"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:text="@string/spend"
            android:textColor="@color/dark_gray"
            android:background="@drawable/item_background_orange"
        />


</LinearLayout>